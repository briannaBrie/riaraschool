<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EngQuizActivity">

<TextView
    android:id="@+id/txtQstn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:gravity="center"
    android:text="Which one comes first in the Alphabet?"
    android:textColor="@color/dark_grey"
    android:textSize="@dimen/txt25"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/dim100"
        android:layout_height="@dimen/dim100"
        android:layout_marginBottom="336dp"
        android:src="@drawable/lettere"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.195" />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/dim100"
        android:layout_height="@dimen/dim100"
        android:layout_marginBottom="336dp"
        android:src="@drawable/lettera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.195" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="@dimen/dim100"
        android:layout_height="@dimen/dim100"
        android:layout_marginBottom="336dp"
        android:src="@drawable/letterc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image2"
        app:layout_constraintTop_toBottomOf="@+id/txtQstn"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
    android:id="@+id/correct"
    android:layout_width="@dimen/dim110"
    android:layout_height="@dimen/dim110"
    android:layout_marginBottom="132dp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/wrong"
    app:layout_constraintHorizontal_bias="0.74"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup"
    app:layout_constraintVertical_bias="0.174"
    tools:src="@drawable/correct" />

<ImageView
    android:id="@+id/wrong"
    android:layout_width="@dimen/dim110"
    android:layout_height="@dimen/dim110"
    android:layout_marginBottom="132dp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.691"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup"
    app:layout_constraintVertical_bias="0.153"
    tools:src="@drawable/wrong" />


</androidx.constraintlayout.widget.ConstraintLayout>